{
	"compilerOptions": {
		"baseUrl": "./src",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"~/*": [ "*" ],
			"@calmdown/pyxis-dom": [ "index.ts" ]
		},
		"skipLibCheck": true,
		"stripInternal": true,
		"strict": true,
		"target": "ESNext",
		"types": [],
		"verbatimModuleSyntax": true
	},
	"include": [
		"./src/**/*.ts"
	]
}
